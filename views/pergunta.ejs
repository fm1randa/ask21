<%- include ('partials/header.ejs') %> 
<body>
    <%- include ('partials/navbar.ejs') %> 
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p class="mt-3"><%= pergunta.descricao %> </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <textarea placeholder="Digite sua resposta" class="form-control mt-3" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button class="btn btn-primary mt-4">Responder</button>
        </form>
        <hr>
        <h3 class="mb-3">Respostas</h3>
        <% respostas.forEach(resposta => {%>
            <div class="card mb-3">
                <div class="card-body">
                    <p class="btnExcluir">
                        <%= resposta.corpo %> 
                    </p>
                    <form action="/excluirresposta" method="post" class="btnExcluir">
                        <input type="hidden" value="<%= resposta.id %>" name="id">
                        <input type="hidden" value="<%= resposta.perguntaId %>" name="perguntaId">
                        <button class="btn btn-danger float-right">Excluir</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %> 
